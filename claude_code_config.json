{
  "mcpServers": {
    
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/path/to/zelavo-backend"
      ],
      "description": "File system access for reading/writing project files"
    },

    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "your_github_token_here"
      },
      "description": "GitHub integration for repo management"
    },

    "postgres": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-postgres"
      ],
      "env": {
        "DATABASE_URL": "postgresql://postgres:your_password@db.xxxxx.supabase.co:5432/postgres"
      },
      "description": "Direct Supabase PostgreSQL access"
    },

    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-server-supabase",
        "--supabase-url",
        "https://xxxxx.supabase.co",
        "--supabase-key",
        "your_supabase_service_role_key"
      ],
      "description": "Supabase client for database operations"
    },

    "redis": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-redis"
      ],
      "env": {
        "REDIS_URL": "rediss://default:xxxxx@xxxxx.upstash.io:6379"
      },
      "description": "Redis/Upstash for Celery queue"
    },

    "fetch": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ],
      "description": "HTTP fetch for testing APIs"
    },

    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "description": "Browser automation for testing"
    },

    "sequential-thinking": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ],
      "description": "Enhanced reasoning for complex tasks"
    },

    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "description": "Persistent memory across sessions"
    }
  }
}
